{
  "id": null,
  "uid": "gin-http-metrics",
  "title": "Gin HTTP Metrics Dashboard",
  "timezone": "browser",
  "schemaVersion": 36,
  "version": 2,
  "refresh": "5s",
  "time": {
    "from": "now-15m",
    "to": "now"
  },
  "annotations": {
    "list": []
  },
  "templating": {
    "list": []
  },
  "panels": [
    {
      "type": "timeseries",
      "title": "Avg. Response Time",
      "gridPos": { "h": 8, "w": 24, "x": 12, "y": 0 },
      "datasource": "Prometheus", 
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "axisLabel": "Sekunder",
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "showPoints": "never",
            "fillOpacity": 10,
            "lineWidth": 2
          },
          "unit": "s"
        }
      },
      "targets": [
        {
          "expr": "sum(rate(http_request_duration_seconds_sum[5m])) by (method, path) / sum(rate(http_request_duration_seconds_count[5m])) by (method, path)",
          "legendFormat": "{{method}} {{path}}",
          "refId": "A"
        }
      ],
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "bottom",
          "showLegend": true
        },
        "tooltip": {
          "mode": "single"
        }
      }
    },
    {
      "type": "bargauge",
      "title": "Requests by Status",
      "targets": [
        {
          "expr": "sum by (status) (rate(http_requests_total[1m]))"
        }
      ],
      "gridPos": { "h": 6, "w": 24, "x": 0, "y": 8 }
    },
     {
      "type": "bargauge",
      "title": "Avg. response time on each endpoint",
      "gridPos": { "h": 8, "w": 24, "x": 12, "y": 0 },
      "datasource": null,
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 0.5 },
              { "color": "red", "value": 1 }
            ]
          },
          "unit": "s",
          "min": 0
        },
        "overrides": []
      },
      "targets": [
        {
          "expr": "sum(rate(http_request_duration_seconds_sum{path=~\"/|/login|/register|/weather|/about|/api/weather|/api/search|/api/login|/api/register|/api/logout|/api/session\"}[5m])) by (method, path) / sum(rate(http_request_duration_seconds_count{path=~\"/|/login|/register|/weather|/about|/api/weather|/api/search|/api/login|/api/register|/api/logout|/api/session\"}[5m])) by (method, path)",
          "legendFormat": "{{method}} {{path}}",
          "refId": "A"
        }
      ],
      "options": {
        "displayMode": "gradient",
        "orientation": "vertical",
        "showUnfilled": true,
        "reduceOptions": {
          "values": false,
          "calcs": [
            "lastNotNull"
          ],
          "fields": ""
        },
        "text": {
             "valueSize": 20
        }
      }
    },
    {
      "type": "row",
      "title": "User Onboarding Metrics",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 14 }
    },
    {
      "type": "stat",
      "title": "New Users (Last 24h)",
      "targets": [
        {
          "expr": "sum(increase(app_user_signups_total{status=\"success\"}[24h]))",
          "legendFormat": "Users"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [{ "color": "blue", "value": null }]
          }
        }
      },
      "gridPos": { "h": 6, "w": 24, "x": 0, "y": 15 }
    },
    {
      "type": "timeseries",
      "title": "Signups (Success vs Failed)",
      "targets": [
        {
          "expr": "sum(rate(app_user_signups_total{status=\"success\"}[24h]))",
          "legendFormat": "Success"
        },
        {
          "expr": "sum(rate(app_user_signups_total{status=\"failed\"}[24h]))",
          "legendFormat": "Failed"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "lineWidth": 2,
            "fillOpacity": 10
          }
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "Failed" },
            "properties": [
              {
                "id": "color",
                "value": { "fixedColor": "red", "mode": "fixed" }
              }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "Success" },
            "properties": [
              {
                "id": "color",
                "value": { "fixedColor": "green", "mode": "fixed" }
              }
            ]
          }
        ]
      },
      "gridPos": { "h": 6, "w": 24, "x": 16, "y": 15 }
    },
    {
      "type": "row",
      "title": "Browser & Tech (Accessibility)",
      "gridPos": { "h": 1, "w": 12, "x": 0, "y": 21 }
    },
    {
      "type": "piechart",
      "title": "Browser Distribution",
      "targets": [
        {
          "expr": "sum(app_browser_usage_total) by (browser)",
          "legendFormat": "{{browser}}"
        }
      ],
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "right",
          "showLegend": true
        },
        "displayLabels": ["percent"],
        "tooltip": {
          "mode": "single",
          "sort": "none"
        }
      },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 22 }
    },
    {
      "type": "bargauge",
      "title": "Top 5 Search Queries (Hits)",
      "targets": [
        {
          "expr": "topk(5, app_search_queries_total)",
          "legendFormat": "{{query}}"
        }
      ],
      "options": {
        "displayMode": "lcd",
        "orientation": "horizontal",
        "showThresholdLabels": false,
        "showThresholdMarkers": true,
        "valueOptions": {
          "unit": "short",
          "prefix": "",
          "suffix": " hits"
        },
        "max": 0,
        "min": 0
      },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "thresholds": {
            "mode": "absolute",
            "steps": [{ "color": "green", "value": null }]
          }
        }
      },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 22 }
    },
    {
      "type": "row",
      "title": "Traffic Patterns & Capacity Planning",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 30 }
    },
    {
      "type": "timeseries",
      "title": "7-Day Traffic Trend (Weekly Pattern)",
      "description": "Shows traffic patterns over the last 7 days regardless of dashboard time range. Good for spotting daily cycles.",
      "targets": [
        {
          "expr": "sum(rate(http_requests_total[5m]))",
          "legendFormat": "Requests/sec"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "axisCenteredZero": false,
            "axisColorMode": "text",
            "axisLabel": "",
            "axisPlacement": "auto",
            "barAlignment": 0,
            "drawStyle": "line",
            "fillOpacity": 10,
            "gradientMode": "opacity",
            "hideFrom": {
              "legend": false,
              "tooltip": false,
              "viz": false
            },
            "lineInterpolation": "smooth",
            "lineWidth": 2,
            "pointSize": 5,
            "scaleDistribution": {
              "type": "linear"
            },
            "showPoints": "never",
            "spanNulls": false,
            "stacking": {
              "group": "A",
              "mode": "none"
            },
            "thresholdsStyle": {
              "mode": "off"
            }
          },
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              }
            ]
          }
        },
        "overrides": []
      },
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 31 },
      "timeFrom": "7d"
    },
    {
      "type": "stat",
      "title": "Total amount of users",
      "gridPos": {
        "h": 6,
        "w": 24,
        "x": 0,
        "y": 100
      },
      "datasource": null,
      "targets": [
        {
          "expr": "app_users_current_total",
          "legendFormat": "",
          "refId": "A"
        }
      ],
      "options": {
        "reduceOptions": {
          "values": false,
          "calcs": [
            "lastNotNull"
          ],
          "fields": ""
        },
        "orientation": "auto",
        "textMode": "auto",
        "colorMode": "background",
        "graphMode": "none",
        "justifyMode": "auto"
      },
      "fieldConfig": {
        "defaults": {
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "blue",
                "value": null
              }
            ]
          },
          "color": {
            "mode": "thresholds"
          }
        },
        "overrides": []
      }
    }
  ]
}