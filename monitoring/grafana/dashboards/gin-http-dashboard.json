{
  "id": null,
  "uid": "gin-http-metrics",
  "title": "Gin HTTP Metrics Dashboard",
  "timezone": "browser",
  "schemaVersion": 36,
  "version": 2,
  "refresh": "5s",
  "time": {
    "from": "now-15m",
    "to": "now"
  },
  "annotations": {
    "list": []
  },
  "templating": {
    "list": []
  },
  "panels": [
    {
      "type": "timeseries",
      "title": "Request Rate (req/s)",
      "targets": [
        {
          "expr": "sum by (method, path) (rate(http_requests_total[1m]))",
          "legendFormat": "{{method}} {{path}}"
        }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 }
    },
    {
      "type": "timeseries",
      "title": "Request Duration (avg seconds)",
      "targets": [
        {
          "expr": "sum by (method, path) (rate(http_request_duration_seconds_sum[1m])) / sum by (method, path) (rate(http_request_duration_seconds_count[1m]))",
          "legendFormat": "{{method}} {{path}}"
        }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 }
    },
    {
      "type": "bargauge",
      "title": "Requests by Status",
      "targets": [
        {
          "expr": "sum by (status) (rate(http_requests_total[1m]))"
        }
      ],
      "gridPos": { "h": 6, "w": 12, "x": 0, "y": 8 }
    },
    {
      "type": "timeseries",
      "title": "95th Percentile Latency",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum by (le, method, path) (rate(http_request_duration_seconds_bucket[5m])))",
          "legendFormat": "{{method}} {{path}}"
        }
      ],
      "gridPos": { "h": 6, "w": 12, "x": 12, "y": 8 }
    },
    {
      "type": "row",
      "title": "User Onboarding Metrics",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 14 }
    },
    {
      "type": "stat",
      "title": "New Users (Last 24h)",
      "targets": [
        {
          "expr": "sum(increase(app_user_signups_total{status=\"success\"}[24h]))",
          "legendFormat": "Users"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [{ "color": "blue", "value": null }]
          }
        }
      },
      "gridPos": { "h": 6, "w": 8, "x": 0, "y": 15 }
    },
    {
      "type": "gauge",
      "title": "Signup Success Rate",
      "targets": [
        {
          "expr": "sum(rate(app_user_signups_total{status=\"success\"}[1h])) / sum(rate(app_user_signups_total[1h])) * 100",
          "legendFormat": "Success Rate"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "min": 0,
          "max": 100,
          "unit": "percent",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "orange", "value": 50 },
              { "color": "green", "value": 80 }
            ]
          }
        }
      },
      "gridPos": { "h": 6, "w": 8, "x": 8, "y": 15 }
    },
    {
      "type": "timeseries",
      "title": "Signups (Success vs Failed)",
      "targets": [
        {
          "expr": "sum(rate(app_user_signups_total{status=\"success\"}[5m]))",
          "legendFormat": "Success"
        },
        {
          "expr": "sum(rate(app_user_signups_total{status=\"failed\"}[5m]))",
          "legendFormat": "Failed"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "lineWidth": 2,

            "fillOpacity": 10
          }
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "Failed" },
            "properties": [
              {
                "id": "color",
                "value": { "fixedColor": "red", "mode": "fixed" }
              }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "Success" },
            "properties": [
              {
                "id": "color",
                "value": { "fixedColor": "green", "mode": "fixed" }
              }
            ]
          }
        ]
      },
      "gridPos": { "h": 6, "w": 8, "x": 16, "y": 15 }
    },
    {
      "type": "row",
      "title": "Browser & Tech (Accessibility)",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 21 }
    },
    {
      "type": "piechart",
      "title": "Browser Distribution",
      "targets": [
        {
          "expr": "sum(app_browser_usage_total) by (browser)",
          "legendFormat": "{{browser}}"
        }
      ],
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "right",
          "showLegend": true
        },
        "displayLabels": ["percent"],
        "tooltip": {
          "mode": "single",
          "sort": "none"
        }
      },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 22 }
    },
    {
      "type": "row",
      "title": "Traffic Patterns & Capacity Planning",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 30 }
    },
    {
      "type": "timeseries",
      "title": "7-Day Traffic Trend (Weekly Pattern)",
      "description": "Shows traffic patterns over the last 7 days regardless of dashboard time range. Good for spotting daily cycles.",
      "targets": [
        {
          "expr": "sum(rate(http_requests_total[5m]))",
          "legendFormat": "Requests/sec"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "axisCenteredZero": false,
            "axisColorMode": "text",
            "axisLabel": "",
            "axisPlacement": "auto",
            "barAlignment": 0,
            "drawStyle": "line",
            "fillOpacity": 10,
            "gradientMode": "opacity",
            "hideFrom": {
              "legend": false,
              "tooltip": false,
              "viz": false
            },
            "lineInterpolation": "smooth",
            "lineWidth": 2,
            "pointSize": 5,
            "scaleDistribution": {
              "type": "linear"
            },
            "showPoints": "never",
            "spanNulls": false,
            "stacking": {
              "group": "A",
              "mode": "none"
            },
            "thresholdsStyle": {
              "mode": "off"
            }
          },
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              }
            ]
          }
        },
        "overrides": []
      },
      "gridPos": { "h": 8, "w": 18, "x": 0, "y": 31 },
      "timeFrom": "7d"
    },
    {
      "type": "stat",
      "title": "All-Time Peak Load",
      "description": "The highest requests/second recorded in the selected period. Scale your server to handle this number.",
      "targets": [
        {
          "expr": "max_over_time(sum(rate(http_requests_total[1m]))[$__range:1m])",
          "legendFormat": "Max Req/s"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "orange",
                "value": 50
              },
              {
                "color": "red",
                "value": 100
              }
            ]
          },
          "color": {
            "mode": "thresholds" 
          }
        },
        "overrides": []
      },
      "gridPos": { "h": 8, "w": 6, "x": 18, "y": 31 }
    }
  ]
}